{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run Java",
      "type": "shell",
      "command": "javac -d ${fileDirname} ${file} && java -cp ${fileDirname} ${fileBasenameNoExtension} < ${workspaceFolder}/input.txt > ${workspaceFolder}/output.txt",
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "java",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*\\.java):(\\d+):\\s+(error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      }
    }
  ]
}
